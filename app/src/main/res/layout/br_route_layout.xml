<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/br_route_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/br_rounded_corner"
        android:text="282"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/br_route_dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Tunney's Pasture"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/br_route_id"
        app:layout_constraintStart_toEndOf="@+id/br_route_id"
        app:layout_constraintTop_toTopOf="@+id/br_route_id"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/br_light_red"
        app:layout_constraintStart_toStartOf="@+id/br_route_id"
        app:layout_constraintTop_toBottomOf="@+id/br_route_dest" />
</androidx.constraintlayout.widget.ConstraintLayout>