<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/br_fav_route_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/br_orange_box"
        android:text="3050"
        app:layout_constraintBottom_toBottomOf="@+id/br_fav_remove_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/br_fav_remove_btn" />

    <TextView
        android:id="@+id/br_fav_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="BAYSHORE"
        app:layout_constraintBottom_toBottomOf="@+id/br_fav_route_number"
        app:layout_constraintStart_toEndOf="@+id/br_fav_route_number"
        app:layout_constraintTop_toTopOf="@+id/br_fav_route_number"
        app:layout_constraintVertical_bias="1.0" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/br_light_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/br_fav_route_number"
        app:layout_constraintTop_toBottomOf="@+id/br_fav_remove_btn" />

    <Button
        android:id="@+id/br_fav_remove_btn"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/br_remove"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>